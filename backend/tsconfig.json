{
    "compilerOptions": {
        "target": "ES2024",
        "lib": ["DOM", "ES2024"],
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "allowImportingTsExtensions": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowJs": true,
        "outDir": "./dist/"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "eslint.config.js"]
}
